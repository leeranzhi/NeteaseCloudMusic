<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="setting_base"
        android:title="基本设置">

        <SwitchPreference
            android:defaultValue="false"
            android:key="load_onlyWifi"
            android:summary="仅在Wi-Fi环境下自动加载图片"
            android:title="省流量模式" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="save_record"
            android:title="保存历史记录" />
        <Preference
            android:summary="删除已缓存的内容及图片"
            android:title="清空缓存" />

    </PreferenceCategory>
    <PreferenceCategory
        android:key="setting_other"
        android:title="其他说明">
        <Preference
            android:summary=" V 1.0"
            android:title="当前版本">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=me.drakeet.seashell" />
        </Preference>

        <Preference
            android:key="about"
            android:summary="我的博客"
            android:title="关于我">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://leeranzhi.github.io/" />
        </Preference>
        <Preference
            android:key="check_update"
            android:title="检查更新">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://fir.im/seashell" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>